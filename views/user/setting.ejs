<style>
.wall{
  max-width: 400px;
  padding: 10px 29px 10px;
  margin: 0 auto 20px;
  margin-top: 10px;
  background-color: white;
  text-align: center;
}
.form-settings input[type="text"]{
  font-size: 16px;
  height: auto;
  margin-bottom: 15px;
  padding: 7px 9px;
}
.btn-single {
  font-size: 16px;
  height: 34px;
  margin-bottom: 15px;
  padding: 7px 9px;
}
.btn-double {
  font-size: 16px;
  height: 86px;
  margin-bottom: 15px;
  padding: 7px 9px;
}
.btn-double2 {
  font-size: 16px;
  height: 90px;
  margin-bottom: 15px;
  padding: 7px 9px;
}
